<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\ProductAttachmentStorage\Persistence"
          package="src.Orm.Zed.ProductAttachmentStorage.Persistence">

    <table name="spy_product_abstract_attachment_storage" identifierQuoting="true">
        <column name="id_product_abstract_attachment_storage" type="BIGINT" autoIncrement="true" primaryKey="true"/>
        <column name="fk_product_abstract" type="INTEGER" required="true"/>
        <column name="data" type="LONGVARCHAR" required="false" description="JSON payload with attachments for this locale"/>
        <column name="key" type="VARCHAR" size="255" required="false" description="Storage key: product_abstract_attachment:{id_product_abstract}:{locale}"/>

        <unique name="spy_product_abstract_attachment_storage-unique-locale">
            <unique-column name="fk_product_abstract"/>
            <unique-column name="locale"/>
        </unique>

        <index name="spy_product_abstract_attachment_storage-key">
            <index-column name="key"/>
        </index>

        <behavior name="synchronization">
            <parameter name="resource" value="product_abstract_attachment"/>
            <parameter name="key_suffix_column" value="fk_product_abstract"/>
            <parameter name="locale" required="true"/>
            <parameter name="queue_group" value="sync.storage.product"/>
        </behavior>

        <behavior name="timestampable"/>
    </table>

</database>
